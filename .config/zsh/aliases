#!/usr/bin/env bash

alias cp="cp -iv"
alias mv="mv -iv"
alias md="mkdir -pv"
alias rm="rm -iv"
alias c="clear"
alias ka="killall"
alias z="z"
alias zl="z -l"
alias zc="z -c"
alias yd="youtube-dl --add-metadata -i"
alias yda="yd -x -f bestaudio/best"
alias ls="gls -hFN --color=auto --group-directories-first" # use GNU ls
alias grep="grep --color=auto"
alias diff="diff --color=auto"
alias iftop="sudo /usr/local/sbin/iftop"

# Improved
alias idu="ncdu --color dark -rr -x --exclude .git --exclude node_modules"
alias icat="highlight --out-format=ansi"

# Use neovim for vim if present
command -v nvim >/dev/null && alias vim="nvim" vi="nvim" v="nvim" vimdiff="nvim -d"

# Dotfiles management
alias cfg="git --git-dir=$HOME/dotfiles/ --work-tree=$HOME"

# Quick navigation & config
alias cc="cd ~/.config"
alias cb="cd ~/.config/bin"
alias cg="cd ~/gitrepos"
alias cfv="$EDITOR ~/.config/nvim/init.vim"
alias cfz="$EDITOR ~/.config/zsh/.zshrc"
alias cfa="$EDITOR ~/.config/zsh/aliases"
alias cfe="$EDITOR ~/.config/zsh/env"
