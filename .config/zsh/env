#!/usr/bin/env bash

export ZDOTDIR="$HOME/.config/zsh"
#: ${ZIM_HOME=${ZDOTDIR:-${HOME}}/.zim}
export ZIM_HOME="${ZDOTDIR:-${HOME}}/.zim"

export XDG_CONFIG_HOME=$HOME/.config
export XDG_DATA_HOME=$HOME/.local/share

# Specify the path to golang libraries
export GOPATH=$HOME/go

# PATH
export PATH=/Users/yanzhang/Development/apache-maven-3.6.1/bin:$PATH
export PATH=/Users/yanzhang/.emacs.d/bin:$PATH  # Doom Emacs
export PATH=/Users/yanzhang/Library/Python/2.7/bin:$PATH  # pip, pip2, pip2.7
export PATH=/Users/yanzhang/Library/Python/3.7/bin:$PATH
export PATH="/opt/local/bin:/opt/local/sbin:$PATH"  # MacPorts
export PATH=$HOME/.cargo/bin:$PATH  # Rust package manager
export PATH=$(/usr/local/bin/gfind $HOME/.config/bin -type d -printf "%p:")$PATH # my own scripts
export PATH=$GOPATH/bin:$PATH   # Golong programs

# Use Neovim as "preferred editor"
export EDITOR="nvim"

# Customize spelling correction prompt.
export SPROMPT='zsh: correct %F{red}%R%f to %F{green}%r%f [nyae]? '

# Remove / from WORDCHARS
export WORDCHARS=${WORDCHARS//[\/]}

# Make less support highlighting, and tailor its prompt (i.e., the bottom line)
export LESSOPEN="| $(which highlight) -O truecolor -s base16/onedark --force -l %s"
export LESS="-R -P ?f%f  .[%lt-%lb]?L/%L. ?pB%pB\% .(press h for help or q for quit)"

# For virtual environment (virtualenv) in python3
export VIRTUALENVWRAPPER_PYTHON=/usr/local/bin/python3

# lf icons
# source $HOME/.config/lf/icons

# Let ranger use custom config (~/.config/ranger/)
#export RANGER_LOAD_DEFAULT=FALSE

